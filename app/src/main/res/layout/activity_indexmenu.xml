<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Indexmenu">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="top"
            android:orientation="horizontal">

            <Button
                android:id="@+id/homes"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:background="@drawable/menu_home"
                android:minHeight="60dp"
                android:onClick="btnhome"
                android:textColor="@android:color/black"
                android:textSize="8sp" />

            <Button
                android:id="@+id/park"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:background="@drawable/menu_park"
                android:minHeight="60dp"
                android:onClick="btnpark"
                android:textColor="#e8e9e9"
                android:textSize="8sp" />

            <Button
                android:id="@+id/about"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:background="@drawable/menu_exgar"
                android:minHeight="60dp"
                android:onClick="btnabout"
                android:textColor="#e8e9e9"
                android:textSize="8sp" />

            <Button
                android:id="@+id/contactus"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:background="@drawable/menu_histroly_usepoint"
                android:minHeight="60dp"
                android:onClick="btncontactus"
                android:textColor="#e8e9e9"
                android:textSize="8sp" />

            <Button
                android:id="@+id/howto"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:background="@drawable/menu_hamber"
                android:minHeight="60dp"
                android:onClick="btnhowto"
                android:textColor="#e8e9e9"
                android:textSize="8sp" />

        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>